
<div class="row margin-container">
  <div class="col-md-4 col-md-offset-4">
      <h2 class="text-center">Registrate aqui</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :Nombre %><br />
          <%= f.text_field :name, autofocus: true, :class => "form-control"  %>
        </div>

        <div class="field form-group">
          <%= f.label :Apellidos %><br />
          <%= f.text_field :last_name, :class => "form-control"  %>
        </div>

        <div class="field form-group">
          <%= f.label :Genero %>
          <%= collection_select(:user, :genre_id, Genre.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
        </div>

        <div class="field form-group">
          <%= f.label :Cuantos_años_tienes? %><br />
          <%= f.select :age, (1..101).to_a, :class => "form-control"  %>
        </div>

        <div class="field form-group">
          <%= f.label :Departamento %>
          <%= collection_select(:user, :state_id, State.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
        </div>

        <div class="field form-group">
          <%= f.label :ciudad %>
          <%= collection_select(:user, :city_id, City.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
        </div>

        <div class="field form-group">
          <%= f.label :Eres_estudiante_o_aportaras_en_la_cuenta_de_alguien? %>
          <%= f.select :role, User.roles.keys.to_a, {}, :class => "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, :class => "form-control"  %>
        </div>

        <div class="field form-group">
          <%= f.label :contraseña %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
        </div>

        <div class="field form-group">
          <%= f.label :confirmar_contraseña %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"  %>
        </div>

        <div class="actions form-group text-center">
          <%= f.submit "Sign up", :class => 'button boton btn btn-warning' %>
        </div>
      <% end %>
    </div>
</div>


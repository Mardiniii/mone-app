
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <h3 class="text-center">Datos de Usuario</h3>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => "form-control"  %>
      </div>

      <div class="field form-group">
        <%= f.label :tipo_de_usuario %>
        <%= f.select :role, [['Estudiante', 1], ['Aportante', 2], ['Admin', 3]], {include_blank: true}, {:class => 'form-control'}  %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"  %>
      </div>

      <h3 class="text-center">Datos Personales</h3>

      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, :class => "form-control"  %>
      </div>

      <div class="field form-group">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, :class => "form-control"  %>
      </div>

      <div class="field form-group">
        <%= f.label :genero %>
        <%= collection_select(:user, :genre_id, Genre.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
      </div>

      <div class="field form-group">
        <%= f.label :age %><br />
        <%= f.number_field :age, :class => "form-control"  %>
      </div>

      <div class="field form-group">
        <%= f.label :ciudad %>
        <%= collection_select(:user, :city_id, State.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
      </div>

      <div class="field form-group">
        <%= f.label :estado %>
        <%= collection_select(:user, :state_id, City.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
      </div>

      <div class="actions form-group text-center">
        <%= f.submit "Sign up", :class => 'btn btn-default' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

